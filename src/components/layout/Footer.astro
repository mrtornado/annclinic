---
import { siteConfig } from "../../config/site";
---

<footer class="bg-surface-tertiary py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
      <div>
        <h3 class="text-lg font-semibold text mb-4">{siteConfig.name}</h3>
        <p class="text-secondary">
          {siteConfig.description}
        </p>
      </div>
      <div>
        <h4 class="font-semibold text mb-4">Servicii</h4>
        <ul class="space-y-2 text-secondary">
          <li>
            <a
              href="/servicii/cardiologie"
              class="hover:text-primary transition-colors">Cardiologie</a
            >
          </li>
          <li>
            <a
              href="/servicii/dermatovenerologie"
              class="hover:text-primary transition-colors">Dermatovenerologie</a
            >
          </li>
          <li>
            <a
              href="/servicii/obstetrica-ginecologie"
              class="hover:text-primary transition-colors"
              >Obstetrică-Ginecologie</a
            >
          </li>
          <li>
            <a
              href="/servicii/pediatrie"
              class="hover:text-primary transition-colors">Pediatrie</a
            >
          </li>
        </ul>
      </div>
      <div>
        <h4 class="font-semibold text mb-4">Contact</h4>
        <ul class="space-y-2 text-secondary">
          <li>📞 {siteConfig.contact.shortPhone}</li>
          <li>📧 {siteConfig.contact.email}</li>
          <li>📍 {siteConfig.address.city}, {siteConfig.address.county}</li>
        </ul>
      </div>
      <div>
        <h4 class="font-semibold text mb-4">Program</h4>
        <ul class="space-y-2 text-secondary">
          <li>Luni - Vineri: {siteConfig.schedule.weekdays}</li>
          <li>Sâmbătă: {siteConfig.schedule.saturday}</li>
          <li>Duminică: {siteConfig.schedule.sunday}</li>
        </ul>
      </div>
      <div>
        <h4 class="font-semibold text mb-4">Articole</h4>
        <ul class="space-y-2 text-secondary">
          <li>
            <a
              href="/articole/simptome-probleme-cardiace"
              class="hover:text-primary transition-colors">Simptome Cardiace</a
            >
          </li>
          <li>
            <a
              href="/articole/tratament-acnee-adolescenti"
              class="hover:text-primary transition-colors">Tratament Acnee</a
            >
          </li>
          <li>
            <a
              href="/articole/vaccinarea-copiilor-program-national"
              class="hover:text-primary transition-colors">Vaccinare Copii</a
            >
          </li>
          <li>
            <a href="/articole" class="hover:text-primary transition-colors"
              >Toate Articolele</a
            >
          </li>
        </ul>
      </div>
    </div>
    <div class="border-t border-border mt-8 pt-8 text-center">
      <p class="text-tertiary">
        © {new Date().getFullYear()}
        {siteConfig.name}. Toate drepturile rezervate.
      </p>
    </div>
  </div>
</footer>
