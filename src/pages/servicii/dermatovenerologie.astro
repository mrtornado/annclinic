---
import { getEntry } from "astro:content";
import ServiceLayout from "../../layouts/ServiceLayout.astro";
import ServiceHero from "../../components/services/ServiceHero.tsx";
import ServiceDetails from "../../components/services/ServiceDetails.tsx";

// Get the dermatovenereology service content
const service = await getEntry("services", "dermatovenerologie");

if (!service) {
  return Astro.redirect("/404");
}

// SEO optimization for dermatovenereology - targeting "dermatovenerolog București" keywords
const seoTitle =
  "Dermatovenerolog București - Consultații Dermatovenerologie | ANN Medical Clinic";
const seoDescription =
  "Dermatovenerolog București cu experiență vastă. Consultații dermatovenerologie, tratament acnee, dermatoscopie, investigații dermatologice și venerice complete. Programează-te la ANN Medical Clinic Bragadiru.";
---

<ServiceLayout service={service} title={seoTitle} description={seoDescription}>
  <!-- Service Hero Section -->
  <ServiceHero service={service} client:load />

  <!-- Service Details Section -->
  <ServiceDetails service={service} client:load />
</ServiceLayout>
