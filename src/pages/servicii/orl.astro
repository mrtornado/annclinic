---
import { getEntry } from "astro:content";
import ServiceLayout from "../../layouts/ServiceLayout.astro";
import ServiceHero from "../../components/services/ServiceHero.tsx";
import ServiceDetails from "../../components/services/ServiceDetails.tsx";

// Get the ORL service content
const service = await getEntry("services", "orl");

if (!service) {
  return Astro.redirect("/404");
}

// SEO optimization for ORL - targeting "medic ORL București" keywords
const seoTitle =
  "Medic ORL București - Consultații Otorinolaringologie | ANN Medical Clinic";
const seoDescription =
  "Medic ORL București cu experiență vastă. Consultații ORL, tratament sinuzită, otită, probleme gât, audiometrie. Programează-te la ANN Medical Clinic Bragadiru.";
---

<ServiceLayout service={service} title={seoTitle} description={seoDescription}>
  <!-- Service Hero Section -->
  <ServiceHero service={service} client:load />

  <!-- Service Details Section -->
  <ServiceDetails service={service} client:load />
</ServiceLayout>
