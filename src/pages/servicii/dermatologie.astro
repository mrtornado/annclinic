---
import { getEntry } from "astro:content";
import ServiceLayout from "../../layouts/ServiceLayout.astro";
import ServiceHero from "../../components/services/ServiceHero.tsx";
import ServiceDetails from "../../components/services/ServiceDetails.tsx";

// Get the dermatology service content
const service = await getEntry("services", "dermatologie");

if (!service) {
  return Astro.redirect("/404");
}

// SEO optimization for dermatology - targeting "dermatolog București" keywords
const seoTitle = "Dermatolog București - Consultații Dermatologie | ANN Clinic";
const seoDescription =
  "Dermatolog București cu experiență vastă. Consultații dermatologie, tratament acnee, dermatoscopie, investigații dermatologice complete. Programează-te la ANN Clinic Bragadiru.";
---

<ServiceLayout service={service} title={seoTitle} description={seoDescription}>
  <!-- Service Hero Section -->
  <ServiceHero service={service} client:load />

  <!-- Service Details Section -->
  <ServiceDetails service={service} client:load />
</ServiceLayout>
