---
import { getEntry } from "astro:content";
import ServiceLayout from "../../layouts/ServiceLayout.astro";
import ServiceHero from "../../components/services/ServiceHero.tsx";
import ServiceDetails from "../../components/services/ServiceDetails.tsx";

// Get the orthopedics service content
const service = await getEntry("services", "ortopedie");

if (!service) {
  return Astro.redirect("/404");
}

// SEO optimization for orthopedics - targeting "ortoped București" keywords
const seoTitle = "Ortoped București - Consultații Ortopedie | ANN Clinic";
const seoDescription =
  "Ortoped București cu experiență vastă. Consultații ortopedie, tratament fracturi, dureri articulare, probleme coloană vertebrală. Programează-te la ANN Clinic Bragadiru.";
---

<ServiceLayout service={service} title={seoTitle} description={seoDescription}>
  <!-- Service Hero Section -->
  <ServiceHero service={service} client:load />

  <!-- Service Details Section -->
  <ServiceDetails service={service} client:load />
</ServiceLayout>
