---
import { getEntry } from "astro:content";
import ServiceLayout from "../../layouts/ServiceLayout.astro";
import ServiceHero from "../../components/services/ServiceHero.tsx";
import ServiceDetails from "../../components/services/ServiceDetails.tsx";

// Get the orthopedics and traumatology service content
const service = await getEntry("services", "ortopedie-traumatologie");

if (!service) {
  return Astro.redirect("/404");
}

// SEO optimization for orthopedics and traumatology - targeting "ortoped traumatolog București" keywords
const seoTitle =
  "Ortoped Traumatolog București - Consultații Ortopedie și Traumatologie | ANN Clinic";
const seoDescription =
  "Ortoped traumatolog București cu experiență vastă. Consultații ortopedie și traumatologie, tratament fracturi, dureri articulare, probleme coloană vertebrală. Programează-te la ANN Clinic Bragadiru.";
---

<ServiceLayout service={service} title={seoTitle} description={seoDescription}>
  <!-- Service Hero Section -->
  <ServiceHero service={service} client:load />

  <!-- Service Details Section -->
  <ServiceDetails service={service} client:load />
</ServiceLayout>
