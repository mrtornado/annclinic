---

<BaseLayout
  title={seoTitle}
  description={seoDescription}
  keywords={keywords}
  structuredData={structuredData}
>
  <main class="min-h-screen">
    <!-- Landing Page Hero Section - Pregnancy Focus -->
    <ServiceHero service={landingPageData} isLandingPage={true} client:load />

    <!-- Service Details Section with Pregnancy Information -->
