---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ServiceHero from "../../components/services/ServiceHero.tsx";
import ServiceDetails from "../../components/services/ServiceDetails.tsx";
import { siteConfig } from "../../config/site";

// SEO optimization for "botox București" - high-value aesthetic treatment
const seoTitle =
  "Botox București - Tratamente Estetice Faciale | ANN Medical Clinic";
const seoDescription =
  "Botox București cu medici esteticieni. Tratamente anti-aging, riduri faciale, rezultate naturale. Consultație gratuită. Programează acum!";

const keywords = [
  "botox București",
  "tratamente botox București",
  "botox Bragadiru",
  "medic estetician București",
  "tratamente anti-aging București",
  "botox riduri faciale",
  "injecții botox București",
  "clinică estetică București",
  "botox profesional București",
  "tratamente estetice faciale",
];

// Landing page specific content optimized for aesthetic treatments
