---
import BookingLayout from "../layouts/BookingLayout.astro";
import { siteConfig } from "../config/site";

// SEO optimization for booking page
const title = "Programare Online - ANN Clinic | Rezervă Consultația Ta";
const description =
  "Programează-te online la ANN Clinic pentru consultații medicale în București. Sistem simplu de rezervare pentru toate specialitățile medicale. Confirmarea se face instant.";
const keywords = [
  "programare online",
  "consultație medicală București",
  "rezervare medic",
  "programare medic București",
  "consultații medicale online",
  "ANN Clinic programare",
  "rezervare consultație",
  "medic București programare",
  "programare cardiolog București",
  "programare dermatolog București",
  "programare ginecolog București",
  "programare pediatru București",
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: "Programare Online - ANN Clinic",
  description: description,
  url: `${Astro.site}programare`,
  mainEntity: {
    "@type": "MedicalBusiness",
    name: "ANN Clinic",
    description: "Clinică medicală cu servicii complete în București",
    url: Astro.site,
    telephone: siteConfig.contact.shortPhone,
    address: {
      "@type": "PostalAddress",
      streetAddress: `${siteConfig.address.street} ${siteConfig.address.number}`,
      addressLocality: siteConfig.address.city,
      addressRegion: siteConfig.address.county,
      postalCode: siteConfig.address.postalCode,
      addressCountry: "RO",
    },
    openingHours: [
      "Mo-Fr " + siteConfig.schedule.weekdays.replace(" - ", "-"),
      "Sa " + siteConfig.schedule.saturday.replace(" - ", "-"),
    ],
    medicalSpecialty: [
      "Cardiologie",
      "Dermatologie",
      "Ginecologie",
      "Pediatrie",
      "Ortopedie",
      "ORL",
      "Neurologie",
      "Oftalmologie",
      "Urologie",
      "Estetică Facială",
    ],
    hasOfferCatalog: {
      "@type": "OfferCatalog",
      name: "Servicii Medicale",
      itemListElement: [
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "MedicalProcedure",
            name: "Consultație Cardiologică",
            description: "Consultații și investigații cardiologice complete",
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "MedicalProcedure",
            name: "Consultație Dermatologică",
            description: "Tratamente pentru afecțiuni ale pielii",
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "MedicalProcedure",
            name: "Consultație Ginecologică",
            description: "Sănătatea femeii și consultații ginecologice",
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "MedicalProcedure",
            name: "Consultație Pediatrică",
            description: "Îngrijire medicală specializată pentru copii",
          },
        },
      ],
    },
  },
  breadcrumb: {
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Acasă",
        item: Astro.site,
      },
      {
        "@type": "ListItem",
        position: 2,
        name: "Programare Online",
        item: `${Astro.site}programare`,
      },
    ],
  },
};

const openGraph = {
  title: "Programare Online - ANN Clinic",
  description:
    "Programează-te online pentru consultații medicale în București. Sistem simplu și rapid de rezervare.",
  image: "/images/ann-clinic-og.jpg",
  imageAlt: "ANN Clinic - Programare Online",
  type: "website",
  url: `${Astro.site}programare`,
};
---

<BookingLayout
  title={title}
  description={description}
  keywords={keywords}
  canonicalUrl={`${Astro.site}programare`}
  structuredData={structuredData}
  openGraph={openGraph}
>
  <div
    class="relative min-h-screen bg-gradient-to-br from-surface via-surface-secondary to-surface pt-28 pb-24 overflow-hidden"
  >
    <!-- Header Section -->
    <div class="text-center mb-12 max-w-4xl mx-auto px-4">
      <div
        class="inline-flex items-center gap-2 bg-surface-elevated/80 backdrop-blur-md text-primary px-6 py-3 rounded-full text-sm font-medium mb-6 shadow-lg border border-primary/20"
      >
        <span class="text-primary">📅</span>
        <span>Programare Online</span>
      </div>

      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        <span class="block">Programează-te</span>
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-primary via-secondary to-accent"
        >
          Rapid și Simplu
        </span>
      </h1>

      <p class="text-xl text-secondary max-w-3xl mx-auto leading-relaxed mb-8">
        Rezervă consultația ta medicală online în sistemul nostru de programări.
        Confirmarea se face instant și primești toate detaliile pe email.
      </p>
    </div>

    <!-- External Booking System Iframe -->
    <div class="max-w-6xl mx-auto px-4 mb-16">
      <div
        class="bg-white rounded-2xl shadow-xl overflow-hidden border border-primary/10"
      >
        <iframe
          src="https://ann.comet.ro/ext_programare.php"
          class="w-full h-[800px] border-0"
          title="Sistem de Programări ANN Clinic"
          loading="lazy"
          frameborder="0"
          sandbox="allow-same-origin allow-scripts allow-popups allow-forms"
          referrerpolicy="origin"
        >
          Browserul dvs. nu suportă iframe-uri. Vă rugăm să accesați pagina de
          programări direct.
        </iframe>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="max-w-4xl mx-auto px-4 text-center">
      <div
        class="bg-blue-50 border border-blue-200 rounded-xl p-6 inline-block"
      >
        <div class="flex items-start gap-4">
          <div class="text-3xl text-blue-600">ℹ️</div>
          <div class="text-left">
            <h4 class="font-semibold text-blue-800 mb-3 text-lg">
              Informații importante
            </h4>
            <ul class="text-sm text-blue-700 space-y-2">
              <li>• Vei primi confirmarea pe email în câteva minute</li>
              <li>• Te rugăm să ajungi cu 15 minute înainte de programare</li>
              <li>• Adu cu tine actul de identitate și cardul de sănătate</li>
              <li>
                • Pentru anulări, contactează-ne cu cel puțin 24h înainte la {
                  siteConfig.contact.shortPhone
                }
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</BookingLayout>
