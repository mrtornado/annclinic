---
import BookingLayout from "../layouts/BookingLayout.astro";
import { siteConfig } from "../config/site";

// SEO optimization for booking page
const title = "Programare Online - ANN Medical Clinic | Rezervă Consultația Ta";
const description =
  "Programează-te online la ANN Medical Clinic pentru consultații medicale în București. Sistem simplu de rezervare pentru toate specialitățile medicale. Confirmarea se face instant.";
const keywords = [
  "programare online",
  "consultație medicală București",
  "rezervare medic",
  "programare medic București",
  "consultații medicale online",
  "ANN Medical Clinic programare",
  "rezervare consultație",
  "medic București programare",
  "programare cardiolog București",
  "programare dermatolog București",
  "programare ginecolog București",
  "programare pediatru București",
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: "Programare Online - ANN Medical Clinic",
  description: description,
  url: `${Astro.site}programare`,
  mainEntity: {
    "@type": "MedicalBusiness",
    name: "ANN Medical Clinic",
    description: "Clinică medicală cu servicii complete în București",
    url: Astro.site,
    telephone: siteConfig.contact.shortPhone,
    address: {
      "@type": "PostalAddress",
      streetAddress: `${siteConfig.address.street} ${siteConfig.address.number}`,
      addressLocality: siteConfig.address.city,
      addressRegion: siteConfig.address.county,
      postalCode: siteConfig.address.postalCode,
      addressCountry: "RO",
    },
    openingHours: [
      "Mo-Fr " + siteConfig.schedule.weekdays.replace(" - ", "-"),
      "Sa " + siteConfig.schedule.saturday.replace(" - ", "-"),
    ],
    medicalSpecialty: [
      "Cardiologie",
      "Dermatologie",
      "Ginecologie",
      "Pediatrie",
      "Ortopedie",
      "ORL",
      "Neurologie",
      "Oftalmologie",
      "Urologie",
      "Estetică Facială",
    ],
    hasOfferCatalog: {
      "@type": "OfferCatalog",
      name: "Servicii Medicale",
      itemListElement: [
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "MedicalProcedure",
            name: "Consultație Cardiologică",
            description: "Consultații și investigații cardiologice complete",
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "MedicalProcedure",
            name: "Consultație Dermatologică",
            description: "Tratamente pentru afecțiuni ale pielii",
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "MedicalProcedure",
            name: "Consultație Ginecologică",
            description: "Sănătatea femeii și consultații ginecologice",
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "MedicalProcedure",
            name: "Consultație Pediatrică",
            description: "Îngrijire medicală specializată pentru copii",
          },
        },
      ],
    },
  },
  breadcrumb: {
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Acasă",
        item: Astro.site,
      },
      {
        "@type": "ListItem",
        position: 2,
        name: "Programare Online",
        item: `${Astro.site}programare`,
      },
    ],
  },
};

const openGraph = {
  title: "Programare Online - ANN Medical Clinic",
  description:
    "Programează-te online pentru consultații medicale în București. Sistem simplu și rapid de rezervare.",
  image: "/images/ann-clinic-og.jpg",
  imageAlt: "ANN Medical Clinic - Programare Online",
  type: "website",
  url: `${Astro.site}programare`,
};
---

<BookingLayout
  title={title}
  description={description}
  keywords={keywords}
  canonicalUrl={`${Astro.site}programare`}
  structuredData={structuredData}
  openGraph={openGraph}
>
  <div class="bg-white pt-32">
    <!-- Header Section -->
    <div class="text-center mb-6 max-w-4xl mx-auto px-4">
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        <span class="block">Programează-te</span>
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-primary via-secondary to-accent"
        >
          Rapid și Simplu
        </span>
      </h1>

      <p class="text-lg text-secondary max-w-3xl mx-auto leading-relaxed">
        Rezervă consultația ta medicală online în sistemul nostru de programări.
        Confirmarea se face instant și primești toate detaliile pe email.
      </p>
    </div>

    <!-- External Booking System Iframe -->
    <div class="w-full mt-20">
      <iframe
        src="https://ann.comet.ro/ext_programare.php?id_cabinet=1"
        class="w-full h-[1200px] border-0"
        title="Sistem de Programări ANN Medical Clinic"
        loading="lazy"
        frameborder="0"
        sandbox="allow-same-origin allow-scripts allow-popups allow-forms"
        referrerpolicy="origin"
        id="booking-iframe"
      >
        Browserul dvs. nu suportă iframe-uri. Vă rugăm să accesați pagina de
        programări direct.
      </iframe>
    </div>
  </div>
</BookingLayout>
